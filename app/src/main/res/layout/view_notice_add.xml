<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    android:padding="5dip" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_content_bg"
        android:orientation="vertical" >

        <CheckBox
            android:id="@+id/all_choose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dialog_list_item_selector"
            android:button="@drawable/dialog_checkbox_selector"
            android:gravity="center"
            android:paddingBottom="13dip"
            android:paddingTop="13dip"
            android:text="全选"
            android:textColor="@color/dialog_text_selector"
            android:textSize="@dimen/text_size_normal" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.1dip"
            android:background="@drawable/stuinfo_line"
            android:contentDescription="@null" />

        <ListView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:divider="@drawable/stuinfo_line"
            android:dividerHeight="0.1dip" >
        </ListView>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dip"
        android:background="@android:color/transparent" />

    <Button
        android:id="@+id/add_class"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_bn_bg_selector"
        android:paddingBottom="8dip"
        android:paddingTop="8dip"
        android:text="确定"
        android:textColor="@color/dialog_text_selector"
        android:textSize="@dimen/text_size_normal" />

</LinearLayout>