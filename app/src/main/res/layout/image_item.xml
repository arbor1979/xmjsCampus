<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
        
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="2dp"
        android:layout_weight="1" >

    <ImageView
        android:id="@+id/row_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:clickable="true"
        android:scaleType="fitXY" />

    <ProgressBar
        android:id="@+id/pb_load"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" 
        />

    <RelativeLayout
        android:id="@+id/layout_heart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" >

         <TextView
        android:id="@+id/tv_heart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/roundcorner_graybg"
        android:paddingLeft="16dp"
        android:text="100"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_xmicro" />

    <ImageView
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_alignBottom="@+id/tv_heart"
        android:layout_alignLeft="@+id/tv_heart"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="4dp"
        android:scaleType="fitXY"
        android:src="@drawable/fill_heart_white"
         />
    </RelativeLayout>
   
    </FrameLayout>

    <TextView
        android:id="@+id/tv_Intro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/text_border_rect"
        android:ellipsize="end"
        android:singleLine="true"
        android:paddingLeft="5dp"
        android:text=""
        android:textSize="@dimen/text_size_micro" />

</LinearLayout>