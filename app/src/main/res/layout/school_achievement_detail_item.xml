<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="horizontal"
     android:baselineAligned="false">

    <LinearLayout
        android:id="@+id/ly_hidden"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/hiddenBtn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:scaleType="centerInside" />

    </LinearLayout>
<LinearLayout
    android:id="@+id/cell_layout"
    android:background="@drawable/common_frame_selector"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="5dp"
    android:paddingTop="5dp"
    android:layout_weight="1"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/thieDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        
        android:gravity="right"
        android:padding="6.0dip"
        android:textColor="@color/topbar_background" />

    <LinearLayout
        android:id="@+id/right_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            
            android:gravity="left"
            android:padding="6.0dip" />

        <com.dandian.campus.xmjs.widget.NonScrollableGridView
            android:id="@+id/grid_picture"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:columnWidth="@dimen/gridView_image_child_width"
            android:horizontalSpacing="2.0dip"
            android:listSelector="@color/white"
            android:numColumns="auto_fit"
            android:scrollingCache="false"
            android:stretchMode="columnWidth"
            android:verticalSpacing="2.0dip"
            android:visibility="gone" />
        <com.dandian.campus.xmjs.widget.NonScrollableListView
            android:id="@+id/list_fujian"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:visibility="gone" />

    </LinearLayout>
</LinearLayout>
</LinearLayout>